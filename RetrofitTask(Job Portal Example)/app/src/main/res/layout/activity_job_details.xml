<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JobDetails"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <ImageView

                android:id="@+id/job_imagee"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                tools:src="@drawable/no_image_available"
                android:background="@drawable/border_image"
                android:layout_height="150dp" />

        <TextView
                android:id="@+id/Job_CompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Company Name"
                android:layout_marginTop="16dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="center"
        />


        <TextView
                android:id="@+id/Job_Link"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12dp"
                tools:text="HTML_LINK"
                android:textColor="#1157c9"/>

        <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aeadad"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How To Apply"
                android:textSize="23dp"
                android:padding="10dp"
                android:textColor="#000"
                android:textStyle="bold"
        />
        <View
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="#aeadad"/>

        <TextView
                android:id="@+id/ClickHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Click Here to Apply"
                android:layout_marginTop="9dp"
                android:textSize="17dp"
                android:textColorLink="#a36767"
        />
        <View
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aeadad"/>
        <TextView
                android:id="@+id/Job_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Company Name"
                android:layout_marginTop="26dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#4e4e4e"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
        />
        <TextView
                android:id="@+id/Job_Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Type"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#8fc26b"
                android:layout_marginLeft="10dp"
        />

        <View
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aeadad"/>
        <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Description"
                android:textSize="16dp"
                android:layout_margin="7dp"
                android:textColor="#363535"
        />


    </LinearLayout>
</ScrollView>